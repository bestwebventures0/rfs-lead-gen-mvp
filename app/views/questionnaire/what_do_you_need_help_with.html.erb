<% content_for :step_title do %>
  What do you need help with?
<% end %>

<% content_for :step do %>
  3
<% end %>

<% content_for :sidebar_image do %>questionnaire/step-3.jpg<% end %>

<%= render layout: 'form' do |f| %>

  <div class="my-5">
      <p class="font-bold mb-2">You can select multiple categories *</p>
      <%= hidden_field_tag "questionnaire[category_ids][]", nil %>
      <% Category.all.each do |category| %>
        <%= check_box_tag "questionnaire[category_ids][]", category.id, @questionnaire.category_ids.include?(category.id), id: dom_id(category) %>
        <%= label_tag dom_id(category), category.title %><br>
      <% end %>
  </div>
  
<% end %>
