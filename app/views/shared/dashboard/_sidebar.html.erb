<div class="hidden min-h-screen lg:w-1/5 xl:w-1/5 border-r px-8 lg:block xl:block shadow-top">
    <div class="menu my-12">
        <div class="border-b pb-4 mb-4 -ml-8 -mr-8">
            <p class="ml-8 mr-8 text-orange-600 font-bold">
                Welcome
            </p>
            <p class="ml-8 mr-8 font-bold">
                <%=current_user.full_name %>
            </p>
            <p class="ml-8 mr-8 text-sm">
                <%= current_user.email %>
            </p>
            <p class="ml-8 mr-8 text-sm">
                +91-<%= current_user.phone %>
            </p>
        </div>
        
        <% unless request.fullpath.include?('dashboard/advisors') %>
            <h2 class="mb-4"><%= link_to 'Matched Advisors', dashboard_advisors_path, class: "text-blue-600 hover:text-blue-700" %></h2>
        <% else %>
            <h2 class="mb-4">Matched Advisors</h2>
        <% end %>

        <% unless request.fullpath.include?('dashboard/answers') %>
            <h2 class="mb-4"><%= link_to 'Questionnaire Answers', dashboard_answers_path, class: "text-blue-600 hover:text-blue-700" %></h2>
        <% else %>
            <h2 class="mb-4">Questionnaire Answers</h2>
        <% end %>

        <% unless request.fullpath.include?('users/edit') || request.fullpath.include?('users') %>
            <h2 class="mb-4"><%= link_to 'Edit your profile', edit_registration_path(current_user), class: "text-blue-600 hover:text-blue-700" %></h2>
        <% else %>
            <h2 class="mb-4">Edit your profile</h2>
        <% end %>
    </div>
</div>

<div class="lg:hidden xl:hidden fixed bottom-0 left-0 z-50 w-full h-16 bg-white border-t border-gray-200">
    <div class="grid h-full max-w-lg grid-cols-3 mx-auto">

        <button type="button" class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 group" onclick="location.href='<%= dashboard_advisors_path %>'">
            <svg class="w-6 h-6 mb-1 text-blue-600 group-hover:text-blue-700" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"></path>
                <path clip-rule="evenodd" fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"></path>
            </svg>
            <span class="text-sm text-blue-600 group-hover:text-blue-700">Advisors</span>
        </button>

        <button type="button" class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 group" onclick="location.href='<%= dashboard_answers_path %>'">
            <svg class="w-6 h-6 mb-1 text-blue-600 group-hover:text-blue-700" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M5 4a1 1 0 00-2 0v7.268a2 2 0 000 3.464V16a1 1 0 102 0v-1.268a2 2 0 000-3.464V4zM11 4a1 1 0 10-2 0v1.268a2 2 0 000 3.464V16a1 1 0 102 0V8.732a2 2 0 000-3.464V4zM16 3a1 1 0 011 1v7.268a2 2 0 010 3.464V16a1 1 0 11-2 0v-1.268a2 2 0 010-3.464V4a1 1 0 011-1z"></path>
            </svg>
            <span class="text-sm text-blue-600 group-hover:text-blue-700">Answers</span>
        </button>

        <button type="button" class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 group" onclick="location.href='<%= edit_registration_path(current_user) %>'">
            <svg class="w-6 h-6 mb-1 text-blue-600 group-hover:text-blue-700" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path clip-rule="evenodd" fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z"></path>
            </svg>
            <span class="text-sm text-blue-600 group-hover:text-blue-700">Profile</span>
        </button>
        
    </div>
</div>